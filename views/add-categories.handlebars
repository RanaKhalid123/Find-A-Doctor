<h2 class="heading">Add Category</h2>
<br>
{{#if errors}}
{{#each errors}}
<li class="dangeruous" value="{{msg}}"> {{msg}} </li>
{{/each}}

{{/if}}
<form method="post" action="/categories/add">
	<div>
		<label>Category Name:</label>
		<input type="text" name="name">
	</div>
	<div>
		<input type="submit" value="Add Category">
	</div>
</form>
<br>

<style>
	.dangeruous{
		color: red;
	}

</style>